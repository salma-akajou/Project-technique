@startuml
left to right direction
actor "Visiteur" as Visiteur
actor "Admin" as Admin

package "Application films" {
    usecase "Consulter la page d'accueil" as UC_Accueil
    usecase "Voir les détails d'un film" as UC_Details
    
    usecase "Gérer les films (CRUD)" as UC_CRUD
    usecase "Filtrer les films" as UC_Filtrer
    usecase "Rechercher des films" as UC_Rechercher
}

' Relations Visiteur
Visiteur -- UC_Accueil
UC_Accueil <.. UC_Details : <<extend>>

' Relations Admin
Admin -- UC_CRUD
UC_CRUD <.. UC_Filtrer : <<extend>>
UC_CRUD <.. UC_Rechercher : <<extend>>

@enduml